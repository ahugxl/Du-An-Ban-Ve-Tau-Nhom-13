<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="control.Controller_DanhMuc_TaiKhoan"
            stylesheets="@GD_DanhMuc_TaiKhoan.css"
            minHeight="0" minWidth="0">
    
    <!-- TOP: Title and Search Bar -->
    <top>
        <VBox spacing="10" styleClass="trenTK">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <Label styleClass="tieude" text="QUẢN LÝ TÀI KHOẢN"/>
            
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="lblTim" text="Tìm kiếm:"/>
                <TextField fx:id="txtTim" 
                          prefWidth="300.0" 
                          promptText="Nhập tên tài khoản hoặc email..." 
                          styleClass="txtTim"/>
                <Button onAction="#tim" 
                       styleClass="btnTim" 
                       text="Tìm kiếm">
                    <padding>
                        <Insets top="5" right="15" bottom="5" left="15"/>
                    </padding>
                </Button>
            </HBox>
        </VBox>
    </top>
    
    <!-- LEFT: Input Form -->
    <left>
        <VBox spacing="10" styleClass="formNhap" prefWidth="300.0">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label styleClass="h2" text="Thông tin tài khoản"/>
            
            <VBox spacing="5">
                <Label styleClass="lbl_Form" text="Tên tài khoản:"/>
                <TextField fx:id="tenTaiKhoanField" 
                          promptText="Nhập tên tài khoản (tối đa 50 ký tự)" 
                          styleClass="txt_FormTK"/>
            </VBox>
            
            <VBox spacing="5">
                <Label styleClass="lbl_Form" text="Email:"/>
                <TextField fx:id="emailField" 
                          promptText="Nhập email" 
                          styleClass="txt_FormTK"/>
            </VBox>
            
            <VBox spacing="5">
                <Label styleClass="lbl_Form" text="Trạng thái:"/>
                <ComboBox fx:id="trangThaiComboBox" 
                         prefWidth="270.0" 
                         promptText="Chọn trạng thái" 
                         styleClass="txt_FormTK">
                    <items>
                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                            <String fx:value="Hoạt động"/>
                            <String fx:value="Khóa"/>
                            <String fx:value="Chưa đổi mật khẩu"/>
                        </javafx.collections.FXCollections>
                    </items>
                </ComboBox>
            </VBox>
            
            <Label styleClass="lblInfo" 
                   text="⚠️ Mật khẩu mặc định sẽ được tạo tự động khi thêm tài khoản"
                   wrapText="true"/>
            
            <!-- Buttons -->
            <Button fx:id="btnThem" 
                   maxWidth="Infinity" 
                   onAction="#them" 
                   styleClass="btnThem" 
                   text="Thêm tài khoản">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <VBox.margin>
                    <Insets top="5"/>
                </VBox.margin>
            </Button>
            
            <Button fx:id="btnSua" 
                   managed="false" 
                   maxWidth="Infinity" 
                   onAction="#sua" 
                   styleClass="btnSua" 
                   text="Cập nhật tài khoản" 
                   visible="false">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </Button>
            
            <Button fx:id="btnXoaThongTin" 
                   maxWidth="Infinity" 
                   onAction="#xoaThongTin" 
                   styleClass="btnXoaThongTin" 
                   text="Xóa thông tin">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </Button>
        </VBox>
    </left>
    
    <!-- CENTER: Account Table -->
    <center>
        <VBox spacing="10" styleClass="tb">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <Label styleClass="h2" text="Danh sách tài khoản"/>
            
            <TableView fx:id="tbTaiKhoan" styleClass="tbTaiKhoan" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colTenTaiKhoan" prefWidth="150.0" text="Tên tài khoản"/>
                    <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email"/>
                    <TableColumn fx:id="colTrangThai" prefWidth="130.0" text="Trạng thái"/>
                    <TableColumn fx:id="colNgayTao" prefWidth="130.0" text="Ngày tạo"/>
                    <TableColumn fx:id="colSoNVSuDung" prefWidth="120.0" text="Số NV sử dụng"/>
                    <TableColumn fx:id="colThaoTac" prefWidth="200.0" sortable="false" text="Thao tác"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>