<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="main" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.ControllerTimVe">
   <children>
      <VBox fx:id="left" minWidth="400.0" spacing="40.0">
         <children>
            <VBox alignment="CENTER" minWidth="300.0" spacing="10.0">
               <children>
                  <Label fx:id="lblTimTheoMaVe" text="Tìm theo mã vé" />
                  <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="300.0">
                     <children>
                        <Label fx:id="lblMaVe" minWidth="150.0" text="Mã vé" />
                        <TextField fx:id="txtMaVe" minWidth="300.0" />
                     </children>
                  </HBox>
                  <Button fx:id="btnTimTheoMaVe" minHeight="20.0" minWidth="100.0" mnemonicParsing="false" onAction="#timTheoMaVe" text="Tìm" />
               </children>
            </VBox>
            <VBox alignment="CENTER" minWidth="300.0" spacing="10.0">
               <children>
                  <Label fx:id="lblTimTheoTTKH" text="Tìm theo thông tin khách hàng" />
                  <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="300.0">
                     <children>
                        <Label fx:id="lblCCCDKH" minWidth="150.0" text="CCCD" />
                        <TextField fx:id="txtCCCD" minWidth="300.0" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="22.0" prefWidth="300.0">
                     <children>
                        <Label fx:id="lblSDTKH" minWidth="150.0" text="Số điện thoại" />
                        <TextField fx:id="txtSDT" minWidth="300.0" />
                     </children>
                  </HBox>
                  <Button fx:id="btnTimTheoThongTinKH" minHeight="20.0" minWidth="101.0" mnemonicParsing="false" onAction="#timVeTheoCCCDHoacSDT" text="Tìm" />
               </children>
            </VBox>
            <VBox alignment="CENTER" minWidth="300.0" spacing="10.0">
               <children>
                  <Label fx:id="lblChucNang" text="Chức năng" />
                  <HBox alignment="CENTER">
                     <children>
                        <Button fx:id="btnInLaiVe" minHeight="50.0" minWidth="100.0" mnemonicParsing="false" onAction="#inLaiVe" text="In lại vé" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </VBox>
      <TableView fx:id="tblTimVe" HBox.hgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="clMaVe" prefWidth="75.0" text="Mã vé" />
            <TableColumn fx:id="clTenKH" prefWidth="75.0" text="Tên khách hàng" />
          <TableColumn fx:id="clTenVe" prefWidth="75.0" text="Tên vé" />
            <TableColumn fx:id="clTenChuyen" prefWidth="75.0" text="Tên chuyến tàu" />
            <TableColumn fx:id="clTenGhe" prefWidth="75.0" text="Tên ghế" />
            <TableColumn fx:id="clGaDi" prefWidth="75.0" text="Ga đi" />
            <TableColumn fx:id="clGaDen" prefWidth="75.0" text="Ga đến" />
            <TableColumn fx:id="clNgayIn" prefWidth="75.0" text="Ngày in" />
            <TableColumn fx:id="clLoaiHT" prefWidth="75.0" text="Loại hành trình" />
            <TableColumn fx:id="clLoaiVe" prefWidth="75.0" text="Loại vé" />
            <TableColumn fx:id="clTinhTrang" prefWidth="75.0" text="Trình trạng vé" />
            <TableColumn fx:id="clPhongCho" prefWidth="75.0" text="Phòng chờ" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</HBox>
