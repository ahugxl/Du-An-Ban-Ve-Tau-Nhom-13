<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@GD_DanhMuc_NhanVien2.css"
	xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="control.Controller_DanhMuc_NhanVien">

	<top>
		<VBox spacing="40.0" styleClass="tren">
			<Label maxHeight="Infinity" styleClass="tieude"
				text="QUẢN LÝ NHÂN VIÊN" VBox.vgrow="ALWAYS">
			</Label>
			<HBox alignment="CENTER_LEFT" spacing="15.0">
				<Label styleClass="lblTim" text="Tìm kiếm:" />
				<TextField fx:id="txtTim" prefWidth="300.0"
					promptText="Nhập tên hoặc mã nhân viên..." styleClass="txtTim" />
				<Button onAction="#tim" styleClass="btnTim"
					text="Tìm kiếm" />
			</HBox>
			<padding>
				<Insets bottom="15.0" left="15.0" top="15.0" />
			</padding>
		</VBox>
	</top>


	<left>
		<VBox spacing="10.0" styleClass="formNhap">
			<Label styleClass="h2" text="Thông tin nhân viên" />

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Mã nhân viên:">
				</Label>
				<TextField fx:id="maNhanVienField"
					promptText="Nhập mã nhân viên (tối đa 20 ký tự)"
					styleClass="txt_Form" />
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Tên nhân viên:">
				</Label>
				<TextField fx:id="tenNhanVienField"
					promptText="Nhập tên nhân viên" styleClass="txt_Form" />
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Ngày sinh:">
				</Label>
				<DatePicker fx:id="ngaySinhPicker" prefWidth="280.0"
					promptText="Chọn ngày sinh" styleClass="txt_Form" />
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Giới tính:">
				</Label>
				<HBox spacing="15">
					<RadioButton fx:id="namRadio" selected="true"
						text="Nam">
						<toggleGroup>
							<ToggleGroup fx:id="gioiTinhGroup" />
						</toggleGroup>
					</RadioButton>
					<RadioButton fx:id="nuRadio" text="Nữ"
						toggleGroup="$gioiTinhGroup" />
				</HBox>
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Số điện thoại:">
				</Label>
				<TextField fx:id="soDienThoaiField"
					promptText="Nhập số điện thoại (tối đa 15 ký tự)"
					styleClass="txt_Form" />
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Trạng thái làm việc:">
				</Label>
				<ComboBox fx:id="cbbTrangThai" prefWidth="280.0"
					promptText="Chọn trạng thái" styleClass="txt_Form">
					<items>
						<javafx.collections.FXCollections
							fx:factory="observableArrayList">
							<String fx:value="Đang làm việc" />
							<String fx:value="Nghỉ phép" />
							<String fx:value="Đã nghỉ việc" />
							<String fx:value="Tạm hoãn" />
						</javafx.collections.FXCollections>
					</items>
				</ComboBox>
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Chức vụ:">
				</Label>
				<ComboBox fx:id="cbbChucVu" prefWidth="280.0"
					promptText="Chọn chức vụ" styleClass="txt_Form" />
			</VBox>

			<VBox spacing="2.0">
				<Label styleClass="lbl_Form" text="Tên tài khoản:">
				</Label>
				<ComboBox fx:id="cbbTenTaiKhoan" editable="true"
					prefWidth="280.0" promptText="Chọn tài khoản" styleClass="txt_Form" />
			</VBox>

			<Button fx:id="btnThem" maxWidth="Infinity"
				onAction="#them" styleClass="btnThem"
				text="Thêm nhân viên">
			</Button>

			<Button fx:id="btnSua" managed="false"
				onAction="#sua" styleClass="btnSua"
				text="Cập nhật nhân viên" visible="false" />

			<Button fx:id="btnXoaThongTin" maxWidth="Infinity"
				onAction="#xoaThongTin" styleClass="btnXoaThongTin"
				text="Xóa thông tin">
			</Button>
			<padding>
				<Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
			</padding>
		</VBox>
	</left>

	<center>
		<VBox spacing="10.0" styleClass="tb">
			<Label styleClass="h2" text="Danh sách nhân viên" />

			<TableView fx:id="tbNhanVien" maxHeight="Infinity"
				styleClass="tbNhanVien" VBox.vgrow="ALWAYS">
				<columns>
					<TableColumn fx:id="colMaNhanVien" prefWidth="90.0"
						text="Mã NV" />
					<TableColumn fx:id="colTenNhanVien" prefWidth="150.0"
						text="Tên nhân viên" />
					<TableColumn fx:id="colNgaySinh" prefWidth="100.0"
						text="Ngày sinh" />
					<TableColumn fx:id="colGioiTinh" prefWidth="80.0"
						text="Giới tính" />
					<TableColumn fx:id="colSoDienThoai" prefWidth="120.0"
						text="Số điện thoại" />
					<TableColumn fx:id="colTrangThai" prefWidth="120.0"
						text="Trạng thái" />
					<TableColumn fx:id="colChucVu" prefWidth="120.0"
						text="Chức vụ" />
					<TableColumn fx:id="colTaiKhoan" prefWidth="100.0"
						text="Tài khoản" />
					<TableColumn fx:id="colActions" prefWidth="150.0"
						sortable="false" text="Thao tác" />
				</columns>
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
			</TableView>
			<padding>
				<Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
			</padding>
		</VBox>
	</center>
</BorderPane>
